@page "/Conta/Registrar"
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
    Layout = "_AuthLayout";
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Crie sua nova conta.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="Name" aria-required="true" placeholder="first name" />
                <label asp-for="Input.Name">Nome</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="last name" />
                <label asp-for="Input.LastName">Sobrenome</label>
            </div>
        </div>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password">Senha</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
@*     <div class="form-check form-switch">
        <div class="form-label">
            <label class="form-label">Deseja incluir a familia?</label>
        </div>
        <ejs-switch id="individual" checked="true"></ejs-switch>
        <label class="form-check-label">Uso individual</label>
        <ejs-switch id="family"></ejs-switch>
        <label class="form-check-label">Familia</label>
    </div> *@

    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var individualSwitch = document.getElementById('individual');
            var familySwitch = document.getElementById('family');
            var familyFields = document.getElementById('familyFields');

            individualSwitch.addEventListener('change', function () {
                if (individualSwitch.checked) {
                    familySwitch.checked = false;
                    familyFields.style.display = 'none';
                }
            });

            familySwitch.addEventListener('change', function () {
                if (familySwitch.checked) {
                    individualSwitch.checked = false;
                    familyFields.style.display = 'block';
                }
            });
        });
    </script>
        
}
