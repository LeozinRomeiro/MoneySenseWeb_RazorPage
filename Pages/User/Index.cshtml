@page "/Usuarios"
@model User.IndexModel
@{
    ViewData["PageTitle"] = "Usuarios";
}

@{
    <div class="row">
        <div class="col-md-7">
            <ejs-grid id="usuarios" dataSource="@Model.Users" gridLines="None">
                <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
                <e-grid-columns>
                    <e-grid-column headerText="Nome" field="UserName"></e-grid-column>
                    <e-grid-column headerText="Email" field="Email"></e-grid-column>
                    <e-grid-column headerText="Sobrenome" field="UserLastName"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
        <div class="col-md-5">
            <div class="widget h-100 d-flex justify-content-center align-items-center">
                <i class="fa-solid fa-shapes fa-2xl"></i>
            </div>
        </div>
    </div>
}
