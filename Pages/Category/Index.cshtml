@page
@model Category.IndexModel

@{
    ViewData["PageTitle"] = "Categorias";
    ViewData["PageActionText"] = "+ New Categoria";
    ViewData["PageActionUrl"] = "/Category/Editor";
}


@{
    <div class="row">
        <div class="col-md-7">
            <ejs-grid id="categories" dataSource="@Model.Categories" gridLines="None"
                      >
                <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
                <e-grid-columns>
                    <e-grid-column headerText="Categorias" field="TitleWithIcon"></e-grid-column>
                    <e-grid-column headerText="Tipo" template="#typeColumnTemplate" width="110px"></e-grid-column>
                    <e-grid-column headerText="Ações" template="#actionColumnTemplate" width="100px"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
        <div class="col-md-5">
            <div class="widget h-100 d-flex justify-content-center align-items-center">
                <i class="fa-solid fa-shapes fa-2xl"></i>
            </div>
        </div>
    </div>

    <script id="typeColumnTemplate" type="text/x-template">
        ${if(Type=="Income")}
            <span class="badge bg-success">Receita</span>
        ${else}
            <span class="badge bg-danger">Despesa</span>
        ${/if}
    </script>

    <script id="actionColumnTemplate" type="text/x-template">
        <div class="d-flex flex-row justify-content-start">
            <a class="btn btn-sm no-a-decoration" href="/Category/Editor/${CategoryId}">
                <i class="fa-solid fa-pen fa-lg"></i>
            </a>
            <form action="/Category/Delete/${CategoryId}" method="post">
        @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-link no-a-decoration"
                onclick="return confirm(&quot;Confirma a exclusão dessa categoria??&quot;)">
                    <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                </button>
            </form>
        </div>
    </script>
}
