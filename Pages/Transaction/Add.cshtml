w@page "/Movimentações/Criar"
@model MoneySenseWeb.Pages.Transaction.AddModel
@{
    ViewData["PageTitle"] = "Nova Movimentação";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="Editor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TransactionId" value="@Model" />
                <div class="mb-3">
                    <ejs-datepicker id="Date" ejs-for="@Model.Transaction.Date" placeholder="Data" floatLabelType="Always" format="dd-MM-yy"></ejs-datepicker>
                    <span asp-validation-for="@Model.Transaction.Date" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="@Model.Transaction.CategoryId" dataSource="@Model.OptionsCategories" placeholder="Categoria"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="CategoryId" text="TitleWithIcon"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="@Model.Transaction.CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="Amount" ejs-for="@Model.Transaction.Amount" floatLabelType="Always" placeholder="Quantidade" min=0 format="c0"></ejs-numerictextbox>
                    <span asp-validation-for="@Model.Transaction.Amount" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="Description" placeholder="Descrição" ejs-for="@Model.Transaction.Description" floatLabelType="Always" multiline="true"></ejs-textbox>
                </div>
                <ejs-button id="submit" type="submit" content="Salvar" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>