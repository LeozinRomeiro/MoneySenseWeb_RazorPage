@{
    var currentPage = Context.Request.Path;
    var navItems = new List<string> { "/Conta/Login", "/Conta/Registrar"};
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MoneySense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="https://bootswatch.com/5/morph/bootstrap.css" /> Simples peguei inicialmente *@
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/23.1.36/bootstrap5-dark.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/23.1.36/material.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.syncfusion.com/ej2/23.1.36/dist/ej2.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneySenseWeb.styles.css" asp-append-version="true" />
</head>
<body class="e-bigger">
    <div class="row justify-content-center">
        <div class="col-5 mt-5">
            <div class="card login-logout-card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        @foreach (var item in navItems)
                        {
                            <li class="nav-item @(currentPage.Value.Contains(item.ToLower()) ? "active" : "")">
                                <a class="nav-link" href="@item">@item.Substring(7)</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-10 my-4">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion ASP.NET Core Script Manager -->
    <ejs-scripts></ejs-scripts>
</body>
</html>